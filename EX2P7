#include <iostream>
#include <conio.h>

using namespace std;

int main()
{

	int num;
	double sum;
	bool quitProg = 0;
	
	do
	{
		
		cout <<  "Enter a number (Press 0 or any negativa number to quit): "; cin >> num;
	
		if (num <= 0)
		{
			quitProg=1;
			cout << "Thank you!" << endl;
			
		}
			else
			{
			sum = (1+num)*(static_cast <double> (num) /2);
			cout << "The sum of the number from 1 to " << num << " is " << sum << endl;		
			}
	} while (!quitProg);
		
		
	_getch();
	return 0;
}
